{
  "manifest_version": 3,
  "name": "DuckDuckGo Site Search",
  "description": "Adds \"Search this site\" button next to DuckDuckGo search results, allowing for refined searches within the domain of the result.",
  "version": "1.0.0",
  "icons": {
    "16": "images/icon-16.png",
    "32": "images/icon-32.png",
    "48": "images/icon-48.png",
    "128": "images/icon-128.png"
  },
  "content_scripts": [
    {
      "js": [
        "scripts/selectors.js",
        "scripts/search-site-btn.js",
        "scripts/parse-results.js",
        "scripts/content.js"
      ],
      "css": ["styles/search-site-btn.css"],
      "matches": ["https://duckduckgo.com/*"]
    }
  ]
}
